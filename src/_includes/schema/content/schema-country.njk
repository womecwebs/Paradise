<script type="application/ld+json">
{
 "@context": "https://schema.org",

 "@type": "Country",

 "name": "{{ title }}",
 "description": "{{ excerpt }}",

 "containedInPlace": {
   "@type": "Continent",
   "name": "{{ continent }}"
 },

 "mainEntityOfPage": {
   "@type": "WebPage",
   "url": "https://paradize.life{{ page.url }}"
 },

 "hasPart": [
   {
     "@type": "WebPage",
     "name": "Destinations in {{ title }}",
     "url": "https://paradize.life/countries/{{ slug }}/destinations/"
   },
   {
     "@type": "WebPage",
     "name": "Experiences in {{ title }}",
     "url": "https://paradize.life/countries/{{ slug }}/experiences/"
   },
   {
     "@type": "WebPage",
     "name": "Blogs about {{ title }}",
     "url": "https://paradize.life/countries/{{ slug }}/blog/"
   }
 ],

 {% set relatedEbooks = collections.ebooks | ebooksForCountry(slug) %}

{% if relatedEbooks.length %},
"subjectOf": [
  {% for ebook in relatedEbooks %}
  {
    "@type": "Product",
    "@id": "https://paradize.life{{ ebook.url }}#ebook"
  }{% if not loop.last %},{% endif %}
  {% endfor %}
]
{% endif %}

}
</script>
