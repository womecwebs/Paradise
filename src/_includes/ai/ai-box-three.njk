<div class="ai-box">
  <textarea
    id="aiPrompt"
    placeholder="You can Ask AI..."
    row="3"
  ></textarea>

  <button type="button" onclick="sendToAI()">
     âž¤
  </button>
</div>

<style>
  .ai-box {
    position: relative;
    max-width: 600px;
    margin: 20px 0;
  }

  .ai-box textarea {
    width: 100%;
    padding: 16px 120px 16px 16px;
    border-radius: 12px;
    border: 1px solid #2f3946;
    background-color: #0a1f44; /* dark blue */
    color: #ffffff;
    font-size: 16px;
    resize: none;
    outline: none;
    box-sizing: border-box;
  }

  .ai-box textarea::placeholder {
    color: #b0c4de;
    font-family: "Montserrat", sans-serif;
  }

  .ai-box button {
    position: absolute;
    right: 14px;
    bottom: 14px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: none;
    background-color: #5789c9;
    color: #ffffff;
    font-weight: 600;
    cursor: pointer;
  }

  .ai-box button:hover {
    background-color: #187bcd;
  }
</style>

<script>
  function sendToAI() {
    const prompt = document.getElementById("aiPrompt").value.trim();
    if (!prompt) return;

    const encodedPrompt = encodeURIComponent(prompt);

    const aiUrl = "/paradise-ai?q=" + encodedPrompt;

    window.location.href = aiUrl;
  }
</script>

