---
title: Blog
layout: base.njk
---

<h1>Blog</h1>

<ul>
  {% for post in collections.blog | reverse %}
    <li>
      <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>

      {% if post.data.image %}
        <img
          src="{{ post.data.image }}"
          alt="{{ post.data.title }}"
          loading="lazy"
        />
      {% endif %}

      <p>
        {{ post.templateContent | striptags | truncate(160) }}
      </p>
    </li>
  {% endfor %}
</ul>

